{
  "rules": {
    "indent": [
      2,
      4
    ],
    "quotes": [
      2,
      "double"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "never"
    ]
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": [
    "react",
    "jade",
    "meteor"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:meteor/recommended"
  ],
  "ecmaFeatures": {
    "jsx": true
  }
}
